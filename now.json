{
  "name": "thecodex",
  "version": 2,
  "builds": [
    {
      "src": "static/**",
      "use": "@now/static"
    },
    {
      "src": "package.json",
      "use": "@now/next"
    }
  ],
  "routes": [
    {
      "src": "^/favicon.ico$",
      "dest": "/static/favicon/favicon.ico"
    },
    {
      "src": "^/static/(.*)",
      "dest": "/static/$1"
    },
    {
      "src": "/([^/]+)/about",
      "dest": "/about?locale=$1"
    },
    {
      "src": "/([^/]+)$",
      "dest": "/index?locale=$1"
    },
    {
      "src": "/([^/]+)/([^/]+)$",
      "dest": "/index?locale=$1&slug=$2"
    }
  ]
}
